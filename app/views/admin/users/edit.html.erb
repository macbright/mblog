<h2> Edit User </h2>

<%= form_for [:admin, @user] do |x| %>

    <%# Check for errors %>
    <% if @user.errors.any? %>
        <%  @user.errors.full_messages.each do |msg| %>
            <%# display error messages %>
            <div class="alert alert-danger"><%= msg%>
        <% end %>
    <% end %>
    <div class="form-group">
        <%= x.label :name%> 
        <%= x.text_field :name, class: 'form-control'%>
    </div>
    <div class="form-group">
        <%= x.label :email%> 
        <%= x.text_field :email, class: 'form-control'%>
    </div>

     <div class="form-group">
        <%= x.label :new_password%> 
        <%= x.password_field :password, class: 'form-control'%>
    </div>

     <div class="form-group">
        <%= x.label :new_password_confirmation%> 
        <%= x.password_field :password_confirmation, class: 'form-control'%>
    </div>
    
    <%= x.submit "submit", class:'btn btn-primary' %>
    <%= link_to "cancel", admin_users_path, class:'btn btn-default'%>
<% end %>